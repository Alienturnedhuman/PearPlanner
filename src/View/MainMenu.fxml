                                <HBox.margin>
                                    <Insets left="5"/>
                                </HBox.margin>
                                <image>
                                    <Image url="/Content/module.png"/>
                                </image>
                            </ImageView>
                            <Button fx:id="modules" style="-fx-background-color: transparent; -fx-text-fill:white; -fx-cursor: hand;"
