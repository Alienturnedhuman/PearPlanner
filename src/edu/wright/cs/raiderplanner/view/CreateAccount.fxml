<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="232.0" prefWidth="550.0" stylesheets="@../content/stylesheet.css"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="99.0" minHeight="0.0" prefHeight="45.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="156.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="58.0" minHeight="10.0" prefHeight="58.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <HBox prefHeight="6.0" prefWidth="530.0" GridPane.rowIndex="1">
            <children>
                <TextField fx:id="salutation" alignment="TOP_LEFT" onKeyReleased="#validateSalutation" prefHeight="31.0"
                           prefWidth="87.0" promptText="Salutation" GridPane.rowIndex="1">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="fullName" alignment="TOP_LEFT" onKeyReleased="#validateName" prefHeight="31.0"
                           prefWidth="229.0" promptText="Full name" GridPane.rowIndex="1">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
                <CheckBox fx:id="famLast" mnemonicParsing="false" selected="true" text="Family name last?"
                          GridPane.rowIndex="1">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </CheckBox>
            </children>
        </HBox>
        <HBox GridPane.rowIndex="2">
            <children>
                <TextField fx:id="accountNo" alignment="TOP_LEFT" maxHeight="-Infinity" maxWidth="-Infinity"
                           minHeight="-Infinity" minWidth="-Infinity" onKeyReleased="#validateNumber" prefHeight="31.0"
                           prefWidth="214.0" promptText="Account number" GridPane.hgrow="SOMETIMES"
                           GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="email" alignment="TOP_LEFT" layoutX="20.0" layoutY="20.0" maxHeight="-Infinity"
                           maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                           onKeyReleased="#validateEmail" prefHeight="31.0" prefWidth="271.0"
                           promptText="Email (optional)">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox GridPane.rowIndex="3">
            <children>
                <Region prefHeight="51.0" prefWidth="328.0"/>
                <Button fx:id="submit" defaultButton="true" disable="true" mnemonicParsing="false"
                        onAction="#handleSubmit" prefHeight="31.0" prefWidth="68.0" text="OK" GridPane.rowIndex="3">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleQuit" prefHeight="31.0"
                        prefWidth="90.0" text="Quit">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <Label fx:id="createAccountLabel" text="Create Account">
            <font>
                <Font size="30.0"/>
            </font>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0"/>
    </padding>
</GridPane>
